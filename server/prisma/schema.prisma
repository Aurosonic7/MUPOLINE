generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Artwork {
  idartwork   Int      @id
  title       String   @db.VarChar(50)
  description String   @db.VarChar(120)
  audio       Bytes?
  image       Bytes?
  idworker    Int
  createat    DateTime @default(now()) @db.Timestamp(0)
  updateat    DateTime @default(now()) @db.Timestamp(0)
  Worker      Worker   @relation(fields: [idworker], references: [idworker], onDelete: NoAction, onUpdate: NoAction, map: "FK$ARTWORK$WORKER$ID")

  @@index([idworker], map: "FK$ARTWORK$WORKER$ID")
}

model Worker {
  idworker     Int       @id
  idboss       Int
  name         String?   @db.VarChar(50)
  email        String    @unique(map: "UK$WORKER$EMAIL") @db.VarChar(50)
  password     String    @db.VarChar(120)
  createat     DateTime  @default(now()) @db.Timestamp(0)
  updateat     DateTime  @default(now()) @db.Timestamp(0)
  Artwork      Artwork[]
  Worker       Worker    @relation("WorkerToWorker", fields: [idboss], references: [idworker], onDelete: NoAction, onUpdate: NoAction, map: "FK$WORKER$BOSS$ID")
  other_Worker Worker[]  @relation("WorkerToWorker")

  @@index([idboss], map: "FK$WORKER$BOSS$ID")
}
